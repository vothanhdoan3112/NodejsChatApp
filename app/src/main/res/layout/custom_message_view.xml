<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/myCardView"
        android:layout_width="75dp"
        android:layout_height="77dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_AvatarFriend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/icn_def_avatar" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtFriendName"
        android:layout_width="230dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/txtMsgPreview"
        app:layout_constraintStart_toEndOf="@+id/myCardView"
        app:layout_constraintTop_toTopOf="@+id/myCardView"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/txtMsgPreview"
        android:layout_width="230dp"
        android:layout_height="26dp"
        android:layout_marginBottom="12dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/myCardView"
        app:layout_constraintStart_toStartOf="@+id/txtFriendName" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="57dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:text="12:26"
        app:layout_constraintBottom_toBottomOf="@+id/txtMsgPreview"
        app:layout_constraintStart_toEndOf="@+id/txtFriendName"
        app:layout_constraintTop_toTopOf="@+id/txtFriendName" />

</androidx.constraintlayout.widget.ConstraintLayout>